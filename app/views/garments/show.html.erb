<h1><%= @garment.name.capitalize %></h1>

<table>
  <thead>
    <td>
      Color
    </td>
    <td>
      Material
    </td>
    <td>
      Price
    </td>
    <td>
      Cool?
    </td>
  </thead>

  <tbody>
    <td>
      <%= @garment.color %>
    </td>
    <td>
      <%= @garment.material %>
    </td>
    <td>
      <%= @garment.price %>
    </td>
    <td>
      <% if @garment.cool %>
        Totally!
      <% else %>
        Nah...not cool...
      <% end %>
    </td>
  </tbody>
</table>

<%= link_to 'Back to the list', garments_path %>
